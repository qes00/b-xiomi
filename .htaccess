# ===================================
# ALLAHU AKBAR SHOP - Configuración Apache
# ===================================

# Activar rewrite engine
RewriteEngine On

# ===== SEGURIDAD =====

# Bloquear acceso a archivos sensibles
<FilesMatch "(^\.env|\.php\.bak|\.sql|config\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Proteger directorio config
<IfModule mod_rewrite.c>
    RewriteRule ^config/ - [F,L]
</IfModule>

# Ocultar versión de Apache
ServerSignature Off

# Prevenir clickjacking
Header always append X-Frame-Options SAMEORIGIN

# Prevenir XSS
Header set X-XSS-Protection "1; mode=block"

# Prevenir MIME sniffing
Header set X-Content-Type-Options nosniff

# ===== FORZAR HTTPS =====

RewriteCond %{HTTPS} !=on
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ===== CACHE PARA ASSETS ESTÁTICOS =====

<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imágenes: 1 año
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS y JS con hash: 1 año
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    
    # Fuentes: 1 año
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML: No cachear (para actualizaciones)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Cache-Control headers
<IfModule mod_headers.c>
    # Assets con hash - cache inmutable
    <FilesMatch "\.(js|css)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Imágenes
    <FilesMatch "\.(ico|jpg|jpeg|png|gif|webp|svg)$">
        Header set Cache-Control "public, max-age=31536000"
    </FilesMatch>
    
    # HTML - no cache
    <FilesMatch "\.html$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>

# ===== COMPRESIÓN GZIP =====

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# ===== SPA ROUTING (Solo si usas BrowserRouter) =====
# NOTA: Con HashRouter esto NO es necesario, pero lo dejo comentado por si cambias

# RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d
# RewriteRule . /index.html [L]

# ===== ERROR PAGES =====

ErrorDocument 404 /index.html
ErrorDocument 500 /500.html
